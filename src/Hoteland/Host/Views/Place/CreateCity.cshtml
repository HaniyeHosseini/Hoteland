@model Hoteland.Application.Contract.Place.CityDto
	<div class="row">
		<div class="col-lg-12 animatedParent animateOnce z-index-47">
			<div class="panel panel-default animated fadeInUp">
				<div class="panel-body">
					<form class="form-horizontal" asp-controller="Place" asp-action="CreateCity" enctype="multipart/form-data" >
						<div class="form-group">
							<label class="col-sm-2 control-label">نام</label>
							<div class="col-sm-10">
								<input type="text" placeholder="لطفا نام شهر را وارد نمایید " class="form-control" asp-for="Name">
							</div>
						</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">کشور</label>
						<div class="col-sm-10" >
							<select class="select2 form-control" asp-for="CountryID" asp-items="@(new SelectList(Model.Countries, nameof(Hoteland.Application.Contract.Place.CountryDto.ID), nameof(Hoteland.Application.Contract.Place.CountryDto.Name)))">
								<option value="0">کشور را انتخاب نمایید</option>
							</select>
						</div>
					</div>
						<button type="submit" class="btn btn-success">ذخیره</button>
					</form>
				</div>
			</div>
		</div>
	</div>


