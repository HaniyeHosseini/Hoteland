@model Hoteland.Application.Contract.FeatureAgg.FeatureDto 
<div class="row">
	<div class="col-lg-12 animatedParent animateOnce z-index-47">
		<div class="panel panel-default animated fadeInUp">
			<div class="panel-body">
				<form class="form-horizontal" asp-controller="Feature" asp-action="Create" enctype="multipart/form-data">
					<div class="form-group">
						<label class="col-sm-2 control-label">نام</label>
						<div class="col-sm-10">
							<input type="text" placeholder="لطفا نام امکانات را وارد نمایید " class="form-control" asp-for="Name">
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">آیکون</label>
						<div class="col-sm-10">
							<input type="file" class="form-control" asp-for="Picture" accept="image/*">
						</div>
					</div>
					<button type="submit" class="btn btn-success">ذخیره</button>
				</form>
			</div>
		</div>
	</div>
</div>





